{
    "name": "macwinnie/twig-form",
    "description": "Create Form from TwigTemplate and JSON configuration if necessary",
    "type": "library",
    "license": "CC-BY-SA-4.0",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "authors": [
        {
            "name": "macwinnie",
            "email": "dev@macwinnie.me"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "twig/twig": "^3",
        "twig/extra-bundle": "^3",
        "macwinnie/phphelpers": "^2"
    },
    "require-dev": {
        "behat/behat": ">=3.8",
        "phpunit/phpunit": ">=9.5",
        "guzzlehttp/guzzle": ">=7.3"
    },
    "autoload": {
        "psr-4" : {
            "macwinnie\\TwigForm\\" : "src/"
        }
    },
    "autoload-dev": {
        "psr-4" : {
            "macwinnie\\TwigFormTests\\" : "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/behat"
    }
}
